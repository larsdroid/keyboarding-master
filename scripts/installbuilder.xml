<project>
    <shortName>kbmaster</shortName>
    <fullName>Keyboarding Master</fullName>
    <version>0.5</version>
    <readmeFile>../docs/readme.txt</readmeFile>
    <licenseFile>../COPYING</licenseFile>
    <leftImage>../../jnostromo/data/installer/side_image.png</leftImage>
    <logoImage>../../jnostromo/data/logos/jnostromo_logo-48x48.png</logoImage>
    <splashImage>../../jnostromo/data/logos/monkygames_splash.png</splashImage>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>A unified configuration environment for device drivers.
</comment>
                    <exec>${installdir}/run.bash</exec>
                    <icon>${installdir}/desktop_icon.png</icon>
                    <name>kbmaster</name>
                    <path>${installdir}</path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec></windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../jnostromo/dist/jnostromo/COPYING</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../jnostromo/dist/jnostromo/desktop_icon.png</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../jnostromo/dist/jnostromo/jnostromo.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../jnostromo/dist/jnostromo/release.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../jnostromo/dist/jnostromo/run.bash</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../jnostromo/dist/jnostromo/readme.txt</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>../../jnostromo/dist/jnostromo/lib</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <postInstallationActionList>
        <addGroup>
            <explanation>games group required to access nostromo controller</explanation>
            <groupname>games</groupname>
            <progressText>adding games group</progressText>
        </addGroup>
        <addGroupToUser>
            <abortOnError>0</abortOnError>
            <explanation>the user must be in the games group to use the nostromo controller</explanation>
            <groupname>games</groupname>
            <progressText>adding games group to user</progressText>
            <showMessageOnError>0</showMessageOnError>
            <username>${env(SUDO_USER)}</username>
        </addGroupToUser>
        <writeFile>
            <explanation>the udev rules setup the permissions on the nostromo</explanation>
            <path>/etc/udev/rules.d/input.rules</path>
            <progressText>creating udev rules</progressText>
            <text>KERNEL=="uinput", MODE="0664", GROUP="games"
KERNEL=="event[0-9]*", GROUP="games", MODE="0664"</text>
        </writeFile>
        <runProgram>
            <explanation>Need to restart udev to persist changes</explanation>
            <program>/etc/init.d/udev</program>
            <programArguments>restart</programArguments>
            <progressText>restarting udev</progressText>
        </runProgram>
        <changeOwnerAndGroup>
            <explanation>Currently, root has ownership so need to change ownership to user</explanation>
            <files>${installdir};${installdir}/*;${installdir}/lib/*;/home/${env(SUDO_USER)}/Desktop/jnostromo.desktop</files>
            <group>${env(SUDO_USER)}</group>
            <owner>${env(SUDO_USER)}</owner>
            <progressText>Changing ownership to user</progressText>
        </changeOwnerAndGroup>
    </postInstallationActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Monky Games</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

